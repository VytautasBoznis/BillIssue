@code {
    private bool isLoading;

    private string[] usedTranslationKeys = {
        MultilanguageKeyConstants.CompanyWorkspaceUsersTitle,
        MultilanguageKeyConstants.SharedBreadcrumbsCompanyWorkspace,
        MultilanguageKeyConstants.SharedBreadcrumbsCompanyWorkspaceUsers,
        MultilanguageKeyConstants.CompanyWorkspaceUsersTableTitle,
        MultilanguageKeyConstants.SharedSearchTitle,
        MultilanguageKeyConstants.CompanyWorkspaceUsersTableFirstNameColumn,
        MultilanguageKeyConstants.CompanyWorkspaceUsersTableLastNameColumn,
        MultilanguageKeyConstants.CompanyWorkspaceUsersTableEmailColumn,
        MultilanguageKeyConstants.CompanyWorkspaceUsersTableJoinDateColumn,
        MultilanguageKeyConstants.CompanyWorkspaceUsersTableCompanyWorkspaceRoleColumn,
        MultilanguageKeyConstants.CompanyWorkspaceUsersTableActionsColumn,
        MultilanguageKeyConstants.SharedEdit,
        MultilanguageKeyConstants.SharedDelete,
        MultilanguageKeyConstants.SharedPageNavigation,
        MultilanguageKeyConstants.SharedPrevious,
        MultilanguageKeyConstants.SharedNext,
    };

    private Dictionary<string, string> translations = new Dictionary<string, string>();

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        isLoading = true;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            translations = await multilanguageService.GetTranslations(usedTranslationKeys);
            isLoading = false;
            StateHasChanged();
        }
    }
}
