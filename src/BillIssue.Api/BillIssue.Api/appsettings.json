{
  "Logging": {
      "LogLevel": {
          "Default": "Information",
          "Microsoft.AspNetCore": "Warning"
      }
  },
  "AllowedHosts": "*",
  "Serilog": {
      "Using": [ "Serilog.Sinks.File" ],
      "MinimumLevel": {
          "Default": "Information"
      },
      "WriteTo": [
          {
              "Name": "File",
              "Args": {
                  "path": "../Logs/Serilog.log",
                  "rollingInterval": "Day",
                  "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3}] {Username} {Message:lj}{NewLine}{Exception}"
              }
          },
          {
              "Name": "Console",
              "Args": {
                  "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                  "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
              }
          }
      ]
  },
  "Database": {
    "ConnectionString": ""
  },
  "Redis": {
    "Host": "127.0.0.1",
    "Port": 6379,
    "SslEnabled": false
  },
  "Sendgrid": {
    "ApiKey": "<ADD KEY HERE>",
    "FromEmail": "<sendgrid Email>",
    "FromEmailDisplayName": "BillIssue",
    "PasswordReminderLinkTemplate": "http://localhost/RemindPassword/{0}"
  },
  "Jwt": {
    "SecretKey": "",
    "Issuer": "",
    "Audience": "",
    "ExpiryInMinutes": 60
  }
}
